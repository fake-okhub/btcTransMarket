<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:centerColor="#55bbbbbb"
                android:endColor="#aaa9a09d"
                android:startColor="#00F2F3F6" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>