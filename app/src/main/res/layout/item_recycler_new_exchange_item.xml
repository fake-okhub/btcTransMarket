<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <ImageView
        android:id="@+id/iv_new_exchange_coin_brand"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_margin="6dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="ETH"
        android:textColor="@color/text_color_black"
        android:textSize="17sp"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recyc_item_symbol"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="฿"
            android:textColor="@color/text_color_black"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_icon_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="0.023245"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <!--用于上面view在未登录的间隙-->
    <View
        android:id="@+id/view_icon_current_price_interval"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_icon_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/text_hint_color"
        android:text="200"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_icon_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/text_hint_color"
        android:text="1000"
        android:textSize="11sp" />
</LinearLayout>