<LinearLayout style="@style/match_match"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_main_header" />
    <LinearLayout
        style="@style/match_match_bg_color">
        <RelativeLayout
            style="@style/match_weight">
            <TextView
                style="@style/tv_user_black_16"
                android:id="@+id/tv_no_ts"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:text="@string/asset_zwkymxj"/>
            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/swipyrefreshlayout"
                style="@style/match_match"
                app:direction="both">
                <ListView
                    android:listSelector="@color/background_color"
                    android:id="@+id/listview"
                    android:scrollbars="none"
                    android:divider="@color/background_color"
                    android:dividerHeight="0dp"
                    style="@style/match_match" />
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
        </RelativeLayout>
        <View
            style="@style/user_safety_line2"/>
        <LinearLayout
            style="@style/match_wrap_h_bg_white">
            <Button
                android:id="@+id/bnt_commit"
                android:layout_weight="1"
                android:text="@string/asset_dhmxj"
                android:background="@drawable/bnt_login"
                style="@style/but_user_asset" />
            <Button
                android:id="@+id/bnt_cancel"
                android:layout_weight="1"
                android:text="@string/asset_bsy"
                android:background="@drawable/bnt_login_gray"
                style="@style/but_user_asset" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
