<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match">
    <RelativeLayout
        style="@style/match_match">
        <ImageView
            android:id="@+id/btn_head_back"
            android:layout_margin="@dimen/margin_padding_10"
            android:src="@mipmap/btn_return_red"
            style="@style/wrap_wrap" />
        <LinearLayout
            android:layout_marginTop="70dp"
            android:paddingLeft="@dimen/margin_padding_30"
            android:paddingRight="@dimen/margin_padding_30"
            style="@style/match_wrap">
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="@string/user_dlzgbtb"
                style="@style/tv_user_black_18" />
            <LinearLayout
                android:layout_marginTop="@dimen/margin_padding_30"
                android:background="@drawable/user_select_t_bg"
                style="@style/match_wrap">

                <RelativeLayout
                    android:id="@+id/rl_xzqh"
                    style="@style/match_wrap">
                    <TextView
                        android:id="@+id/ed_qh"
                        android:text="@string/safety_zgdl"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/ico_earth"
                        style="@style/ed_user_login" />
                    <ImageView
                        style="@style/img_user_login_r"
                        android:src="@mipmap/ico_arrowright" />
                </RelativeLayout>
                <View
                    style="@style/user_safety_line"/>
                <EditText
                    android:id="@+id/ed_name"
                    android:hint="@string/user_sjhm_hint"
                    android:maxLength="11"
                    android:typeface="monospace"
                    android:inputType="number"
                    android:drawableLeft="@mipmap/ico_mobile"
                    style="@style/ed_user_login" />
                <View
                    style="@style/user_safety_line"/>
                <RelativeLayout
                    style="@style/match_wrap">
                    <EditText
                        android:id="@+id/ed_pwd"
                        android:inputType="textPassword"
                        android:hint="@string/user_dlmm_hint"
                        android:layout_toLeftOf="@+id/img_eyes_close"
                        android:drawableLeft="@mipmap/ico_lock"
                        android:typeface="monospace"
                        style="@style/ed_user_login"  />
                    <ImageView
                        android:id="@+id/img_eyes_close"
                        style="@style/img_user_login_r"
                        android:src="@mipmap/ico_eyes_close" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_login"
                android:text="@string/user_dl"
                android:background="@drawable/bnt_login"
                style="@style/but_user_login" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/margin_padding_20"
            android:layout_alignParentBottom="true"
            style="@style/match_wrap_h">
            <View
                android:layout_height="@dimen/w_0.1"
                style="@style/weight_wrap"/>
            <TextView
                android:id="@+id/tv_abroad"
                android:text="@string/user_zgsjdl"
                style="@style/tv_user_black_12"/>
            <TextView
                android:text="|"
                android:layout_marginRight="@dimen/margin_padding_5"
                android:layout_marginLeft="@dimen/margin_padding_5"
                style="@style/tv_user_black_12"/>
            <TextView
                android:id="@+id/tv_forget"
                android:text="@string/user_wjdlmm"
                style="@style/tv_user_black_12"/>
            <View
                android:layout_height="@dimen/w_0.1"
                style="@style/weight_wrap"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>