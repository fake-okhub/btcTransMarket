<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header"
    style="@style/layout_header">
    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/btn_head_back"
        style="@style/title_base_button"
        android:padding="10dp"
        android:src="@mipmap/icon_sub_view_back"
        android:visibility="gone"/>

    <LinearLayout
        style="@style/wrap_wrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/btn_head_back">

        <LinearLayout
            android:id="@+id/ll_head_title"
            style="@style/wrap_wrap_h"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_head_ico"
                style="@style/wrap_wrap_cv"
                android:layout_marginRight="@dimen/margin_padding_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_head_title"
                style="@style/title_base_title"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name" />

            <ImageView
                android:id="@+id/img_head_ico_r"
                style="@style/wrap_wrap_cv"
                android:layout_marginStart="@dimen/margin_padding_5"
                android:src="@mipmap/ic_arrow_drop_down_white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_head_front"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/dropdown_scan" />

    <ImageView
        android:id="@+id/add_price_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/tv_head_price"
        style="@style/title_base_title"
        android:visibility="gone"
        android:text="@string/balance_empty_placeholder"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_padding_10" />

    <View
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <ImageView
        android:id="@+id/headRightImage"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/head_right_image"/>

</RelativeLayout>