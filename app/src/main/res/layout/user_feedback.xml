<LinearLayout
    style="@style/match_match"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/layout_main_header" />
    <LinearLayout
        style="@style/match_match_bg_color">
        <TextView
            style="@style/tv_user_gray_14"
            android:drawableLeft="@mipmap/ico_tips"
            android:drawablePadding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/user_content_tips" />
        <EditText
            android:id="@+id/ed_content"
            style="@style/ed_user_content"/>
        <Button
            android:id="@+id/bnt_commit"
            android:text="@string/user_tj"
            android:background="@drawable/bnt_login"
            style="@style/but_user_content" />
    </LinearLayout>
</LinearLayout>
