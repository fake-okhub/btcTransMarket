<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_wrap">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="2dp">

        <LinearLayout
            style="@style/match_wrap"
            android:background="@drawable/item_click_background">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp">

                <ImageView
                    android:id="@+id/img_del"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="7dp"
                    android:layout_gravity="end"
                    android:src="@mipmap/icon_close" />

                <TextView
                    android:id="@+id/tv_mrmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/text_color_padding"
                    android:text=""
                    android:textColor="@color/text_color_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/waitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/text_color_padding"
                    android:background="@drawable/orders_waiting_radius"
                    android:text="@string/trans_waiting"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

                <!--<TextView-->
                <!--android:id="@+id/tv_wtsl"-->
                <!--style="@style/tv_user_red_12"-->
                <!--android:layout_marginLeft="@dimen/margin_padding_5"-->
                <!--android:layout_weight="1"-->
                <!--android:text="E1.20"-->
                <!--android:visibility="gone" />-->

                <!--<TextView-->
                <!--style="@style/tv_user_black_12"-->
                <!--android:text="@string/trans_jyed"-->
                <!--android:visibility="gone" />-->

                <!--<TextView-->
                <!--android:id="@+id/tv_cje"-->
                <!--style="@style/tv_user_red_12"-->
                <!--android:layout_marginLeft="@dimen/margin_padding_5"-->
                <!--android:text="E1.20 = ï¿¥120.46" />-->
            </FrameLayout>

            <ProgressBar
                android:id="@+id/ordersProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="12dp"
                android:progressDrawable="@drawable/orders_progressbar_green_horizontal"
                android:max="100"
                style="@style/ordersProgressbar" />

            <LinearLayout
                style="@style/match_wrap_h"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="15dp">

                <LinearLayout style="@style/weight_wrap">

                    <TextView
                        android:id="@+id/tv_tv_wtjg_title"
                        style="@style/tv_user_gray_10"
                        android:text="@string/trans_wtjg" />

                    <TextView
                        android:id="@+id/tv_wtjg"
                        style="@style/tv_user_black_14"
                        android:layout_marginTop="@dimen/margin_padding_5" />

                </LinearLayout>

                <LinearLayout style="@style/weight_wrap"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_cjjg_title"
                        style="@style/tv_user_gray_10"
                        android:text="@string/trans_cjjg" />

                    <TextView
                        android:id="@+id/tv_cjjg"
                        style="@style/tv_user_black_14"
                        android:layout_marginTop="@dimen/margin_padding_5"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_time"
                    style="@style/weight_wrap"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_finish_count_title"
                        style="@style/tv_user_gray_10"
                        android:text="@string/trans_finished_count" />

                    <TextView
                        android:id="@+id/tv_finish_count"
                        style="@style/tv_user_black_14"
                        android:layout_marginTop="@dimen/margin_padding_5"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/margin_padding_8" />-->
</LinearLayout>