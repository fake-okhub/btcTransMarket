<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/ed_user_confirm">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="18dp"
                    android:text="@string/user_set_language"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/languageRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="16dp">

                    <RadioButton
                        android:id="@+id/zhRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="@string/zh"
                        android:textSize="18sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/language_radio_select"
                        android:drawablePadding="25dp"/>

                    <RadioButton
                        android:id="@+id/twRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="15dp"
                        android:text="@string/zh_rTW"
                        android:textSize="18sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/language_radio_select"
                        android:drawablePadding="25dp"/>

                    <RadioButton
                        android:id="@+id/enRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/en"
                        android:textSize="18sp"
                        android:button="@null"
                        android:drawableLeft="@drawable/language_radio_select"
                        android:drawablePadding="25dp"/>

                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</FrameLayout>