<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	style="@style/match_match"
	android:background="@drawable/bnt_click_background"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
		android:padding="@dimen/margin_padding_10"
		style="@style/match_match">
		<ImageView
			android:src="@mipmap/ico_btc_asset"
			android:id="@+id/img_market_currency_type"
			android:layout_centerHorizontal="true"
			style="@style/wrap_wrap"/>
		<TextView
			android:id="@+id/tv_market_currency_name"
			android:layout_below="@+id/img_market_currency_type"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/margin_padding_10"
			style="@style/tv_user_black_10"/>
	</RelativeLayout>
</RelativeLayout>