<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bnt_home_kszf"
        android:layout_marginStart="16dp"
        style="@style/wrap_wrap_cv">

        <TextView
            android:id="@+id/tv_home_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_home_ky_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:text="@string/scan_login_available"
            android:textColor="@color/text_color_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_market_gray" />

    <ImageView
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp"
        android:background="@mipmap/ico_arrowright" />

</FrameLayout>