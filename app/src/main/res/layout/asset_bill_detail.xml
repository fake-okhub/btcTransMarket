<LinearLayout
    style="@style/match_match"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/layout_main_header" />
    <LinearLayout
        style="@style/match_match_bg_color">
        <LinearLayout
            style="@style/match_wrap_bg_white">
            <TextView
                android:layout_marginLeft="@dimen/margin_padding_10"
                android:layout_marginTop="@dimen/margin_padding_10"
                android:id="@+id/tv_bill_title"
                style="@style/tv_user_gray_14"/>
            <TextView
                android:layout_margin="@dimen/margin_padding_10"
                android:id="@+id/tv_bill_number"
                style="@style/tv_user_black_26"/>
            <View
                style="@style/user_safety_line2"/>
            <LinearLayout
                android:padding="@dimen/margin_padding_10"
                style="@style/match_wrap_h">
                <TextView
                    android:text="@string/asset_bill_zdlx"
                    style="@style/tv_user_black_14"/>
                <TextView
                    android:id="@+id/tv_bill_type"
                    style="@style/tv_user_gray_14"/>
            </LinearLayout>
            <View
                style="@style/user_safety_line2"/>
            <LinearLayout
                android:padding="@dimen/margin_padding_10"
                style="@style/match_wrap_h">
                <TextView
                    android:text="@string/asset_bill_zhye"
                    style="@style/tv_user_black_14"/>
                <TextView
                    android:id="@+id/tv_bill_balance"
                    style="@style/tv_user_gray_14"/>
            </LinearLayout>
            <View
                style="@style/user_safety_line2"/>
            <LinearLayout
                android:padding="@dimen/margin_padding_10"
                style="@style/match_wrap_h">
                <TextView
                    android:text="@string/asset_bill_zdsj"
                    style="@style/tv_user_black_14"/>
                <TextView
                    android:id="@+id/tv_bill_tiem"
                    style="@style/tv_user_gray_14"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/user_safety_line"/>
    </LinearLayout>
</LinearLayout>
