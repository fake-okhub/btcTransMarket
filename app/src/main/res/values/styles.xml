    <style name="layout_header_select" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/main_header_bg</item>
    </style>


    <style name="match_match_header_bg_color" parent="match_match">
        <item name="android:background">@color/main_header_bg</item>
    </style>

    <style name="match_match_bg_color" parent="match_match">
        <item name="android:background">@color/background_color_white</item>
    </style>

    <style name="match_match_h_bg_color" parent="match_match_h">
        <item name="android:background">@color/background_color_white</item>
    </style>

    <style name="match_wrap_bg_color" parent="match_wrap">
        <item name="android:background">@color/background_color</item>
